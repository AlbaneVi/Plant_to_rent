


<h3 class="title-user">Mes plantes</h3>
<div class="cards">
  <% @user.plants.each do |plant| %>
  <div class="card">
    <div class="card-img" style="background-image: url('<%= cl_image_path plant.photo,  crop: :fill %>')">
    </div>
      <div class="card-txt">
        <p><%= plant.family.capitalize %></p>
          <h3><%= plant.name.capitalize %></h3>
            <div class="price">
              <p><%= plant.price_per_day %>  â‚¬ <span>/jour</span></p>
            </div>
      </div>
        <%= link_to " ", plant_path(plant), class: "card-link" %>
  </div>
  <% end %>
  <div class="card empty">
    <div class="add-body">
      <div class="circle-add">
        <h1>+</h1>
      </div>
      <p>ajouter une plante</p>
    </div>
    <%= link_to " ", new_plant_path, class: "card-link" %>
  </div>
</div>




