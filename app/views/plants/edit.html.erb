<h1>Update plant</h1>
<%= simple_form_for @plant do |f| %>
  <%= f.input :name %>
  <%= f.input :family %>
  <%= f.input :description %>
  <%= f.input :water %>
  <%= f.input :sun  %>
  <%= f.input :ext_int %>
  <%= f.input :size_cm %>
  <%= f.input :price_per_day %>
  <% f.input :created_at  %>
  <% f.input :user_id  %>
  <%= f.input :photo %>
  <%= f.button :submit, class: 'btn btn-primary' %>
<% end %>
