<div class="container-show">

  <div class="photo-container">
    <p id="plant_photo" >
      <%= cl_image_tag "#{@plant.photo}", :width=>100 %>
    </p>
  </div>

  <div class="plant-details">
      <h2 class="detail" id="name"><%= @plant.name %></h2>
      <div class="detail" id="family"><%= @plant.family %></div>
      <div class="detail">J'aime <%= @plant.water %> l'eau et <%= @plant.sun %> le soleil
      </div>
      <div class="detail">Je me plais à l'<%= @plant.ext_int%></div>
      <div class="detail">Je mesure <%= @plant.size_cm%> centimtres</div>
      <div class="detail">J'ai plein de fleurs : <%= @plant.flowers%></div>
       <br>
       <br>
      <div class="detail" id="motproprio">Un petit mot de mon propriétaire...
        <br>
        "<%= @plant.description %>"</div>
  </div>

  <div class="book-and-back">
    <%= @plant.price_per_day%>
<p>formulaire</p>
    <%=link_to "Back to list", plants_path, class: 'btn btn-primary' %>

  </div>

</div>
